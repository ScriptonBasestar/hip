{
  "name": "Ruby Development Container",
  "image": "mcr.microsoft.com/devcontainers/ruby:3.2",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rebornix.ruby",
        "castwide.solargraph",
        "kaiwood.endwise",
        "ninoseki.vscode-gem-lens"
      ],
      "settings": {
        "ruby.rubocop.path": "/usr/local/bundle/bin/",
        "ruby.lint": {
          "rubocop": true
        },
        "solargraph.diagnostics": true
      }
    }
  },
  "forwardPorts": [3000],
  "postCreateCommand": "bundle install",
  "remoteUser": "vscode"
}
